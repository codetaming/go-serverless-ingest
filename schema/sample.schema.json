{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://raw.githubusercontent.com/codetaming/indy-ingest/master/schema/sample.schema.json",
  "additionalProperties": false,
  "required": [
    "name",
    "accession",
    "characteristics"
  ],
  "title": "sample",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "accession": {
      "type": "string"
    },
    "characteristics": {
      "type": "array",
      "items": {
        "additionalProperties": false,
        "required": [
          "tag",
          "value"
        ],
        "type": "object",
        "properties": {
          "tag": {
            "type": "string"
          },
          "value": {
            "type": "string"
          }
        }
      }
    }
  }
}